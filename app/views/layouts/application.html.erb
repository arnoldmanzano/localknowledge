<!DOCTYPE html>
<html>
<head>
  <title>LocalKnowledge</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places,geometry" async defer></script>
</head>
<body ng-app="LocalKnowledgeApp">
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
         <% if current_user %>
         <li><%= link_to 'Edit Profile',edit_user_registration_path %></li>
         <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>

         <li><a href="#" data-toggle="modal" data-target="#myModal">Request a tour</a></li>

         <li><%= link_to 'My requests', requests_path %></li>
         <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
         <% else %>
         <li><%= link_to 'Login', new_user_session_path %></li>
         <% end %>
      </ul>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>


  </div>

</body>
</html>
